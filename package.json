{
    "name": "my-bun-project",
    "version": "1.0.0",
    "description": "A modern TypeScript project built with Bun",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "keywords": [
        "bun",
        "typescript",
        "template"
    ],
    "author": "Angel Moreno <angel@angelxmoreno.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/my-bun-project.git"
    },
    "bugs": {
        "url": "https://github.com/angelxmoreno/my-bun-project/issues"
    },
    "homepage": "https://github.com/angelxmoreno/my-bun-project#readme",
    "scripts": {
        "prepare": "bun lefthook install",
        "dev": "bun --hot src/index.ts",
        "build": "tsc",
        "test": "bun test",
        "typecheck": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check": "bun run typecheck && bun run lint"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.5",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/bun": "^1.3.2",
        "lefthook": "^2.0.4",
        "pino-pretty": "^13.1.2"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "pino": "^10.1.0"
    }
}
