{
    "name": "gee-mailer",
    "version": "1.0.0",
    "description": "A local-first email intelligence and analytics system",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "keywords": [
        "gmail",
        "email",
        "analytics",
        "typescript",
        "bun"
    ],
    "author": "Angel Moreno <angel@angelxmoreno.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/gee-mailer.git"
    },
    "bugs": {
        "url": "https://github.com/angelxmoreno/gee-mailer/issues"
    },
    "homepage": "https://github.com/angelxmoreno/gee-mailer#readme",
    "scripts": {
        "prepare": "bun lefthook install",
        "dev": "bun --hot src/index.ts",
        "build": "tsc",
        "test": "bun test",
        "typecheck": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "check": "bun run typecheck && bun run lint",
        "docker:start": "docker compose -f docker/docker-compose.dev.yml up -d",
        "docker:stop": "docker compose -f docker/docker-compose.dev.yml down",
        "docker:clear": "docker compose -f docker/docker-compose.dev.yml down -v",
        "docker:logs": "docker compose -f docker/docker-compose.dev.yml logs -f"
    },
    "dependencies": {
        "@keyvhq/core": "^2.1.11",
        "@keyvhq/redis": "^2.1.11",
        "@keyvhq/sqlite": "^2.1.11",
        "@ts-types/deep-partial": "^0.0.1",
        "pino": "^10.1.0",
        "ts-deepmerge": "^7.0.3",
        "tsyringe": "^4.10.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.5",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/bun": "^1.3.2",
        "lefthook": "^2.0.4",
        "pino-pretty": "^13.1.2"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    }
}
